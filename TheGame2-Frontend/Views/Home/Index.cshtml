@{
    ViewData["Title"] = "Welcome to TheGame!";
}

<div class="text-center">
    <div class="container p-5">
        <h1 class="display-4">Welcome to TheGame2!</h1>
        <img src="/Images/player.png" width="150" height="150">
    </div>
    <div class="container p-3">
        <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card border-info h-100">
                <img src="/Images/About_graphic.png" class="card-img-top" height="75"/>
            <div class="card-header">
                <h3>About TheGame2</h3>
            </div>
            <div class="card-body">
                <a>Find out what TheGame is about, how to get it and game basics</a>
            </div>
            <div class="card-footer"><a  asp-area="" asp-controller="Home" asp-action="About">Find out more...</a></div>
        </div>
        </div>
        <div class="col">
        <div class="card border-info h-100">
            <img src="/Images/Join_graphic.png" class="card-img-top" height="75" />
            <div class="card-header">
                <h3>Join</h3>
            </div>
            <div class="card-body">
                <p>To access more features log in or sign up!</p>
            </div>
            <div class="card-footer">
                <a><a  asp-area="" asp-controller="Login" asp-action="Index">Login</a> or <a  asp-area="" asp-controller="Home" asp-action="SignUp">Sign Up</a></a>
            </div>
        </div>
        </div>
        <div class="col">

        <div class="card border-info h-100">
            <img src="/Images/galery_graphic.png" class="card-img-top" height="75" />
            <div class="card-header">
                <h3>Galery</h3>
            </div>
            <div class="card-body">
                See game footage and fanarts
            </div>
            <div class="card-footer">
                <a  asp-area="" asp-controller="Home" asp-action="Galery">Visit</a>
            </div>
        </div>
        </div>
        
    </div>
    </div>
    
</div>
