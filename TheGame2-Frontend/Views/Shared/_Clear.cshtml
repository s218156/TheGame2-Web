<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebCon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebCon.styles.css" asp-append-version="true" />
    <script src="~/js/query-10.2.min.js" type="text/javascript" ></script>

</head>
<body>
    <header class="justify-content-center d-flex p-5">
            <img src="/images/webcon.png" alt="Welcome to WebCon" width="100" height="100"/>
    </header>


        <div class="container d-flex justify-content-center">
                <main role="main" class=" border border-secondary rounded p-5">
            @RenderBody()
        </main>        
    </div>


     <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WebCon - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>