@model TheGame2_Library.Models.UserModel
@{
    ViewData["Title"] = "Login";
}



<div class="justify-content-center d-flex">
    <h4>login</h4>
</div>
<div class="row">
    <div class="col">
        @if (ViewData["ErrorMessage"] != null)
        {
                <div class="alert alert-danger" role="alert">
                @ViewData["ErrorMessage"]
                    </div>
        }
        @if (ViewData["message"] != null)
        {
                        <div class="alert alert-success" role="alert">
                @ViewData["message"]
                        </div>
        }
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger justify-content-center d-flex"></div>

            <div class="form-group">
                <label asp-for="username" class="control-label justify-content-center d-flex"></label>
                <input asp-for="username" class="form-control justify-content-center d-flex" />
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label justify-content-center d-flex"></label>
                <input asp-for="password" class="form-control justify-content-center d-flex" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group justify-content-center d-flex">
                <input type="submit" value="Login" class="btn btn-info justify-content-center d-flex" />
            </div>
        </form>
    </div>
</div>

