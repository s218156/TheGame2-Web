@model TheGame2_Library.Models.UserModel

@{
    ViewData["Title"] = "ChangeTexture";
}

<h1>Choose your texture</h1>
<hr/>
<div class="row">
	<form asp-action="ChangeTexture">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		@for(int i =0;i<5;i++){
	string path = "/Images/playerMiniatures/" + i.ToString() + ".png";
	<img src=@path height="50" width="50"/>
	@Html.RadioButtonFor(model=>model.textureID,i)
}
	</div>
	<div class="form-group">
                <input type="submit" value="Change" class="btn btn-primary" />
            </div>
	</form>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

